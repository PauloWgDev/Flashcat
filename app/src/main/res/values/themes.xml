<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ultimate_Flashcard_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cat_theme_main</item>
        <item name="colorPrimaryVariant">@color/cat_theme_main</item>
        <item name="colorOnPrimary">@color/cat_theme_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cat_theme_main</item>
        <item name="colorSecondaryVariant">@color/cat_theme_background</item>
        <item name="colorOnSecondary">@color/cat_theme_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Ultimate_Flashcard_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Flashcard_Background"><item name="android:background">@color/white</item></style>

    <style name="App_Background"><item name="android:background">@color/cat_theme_background</item></style>

    <style name="Theme.Ultimate_Flashcard_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ultimate_Flashcard_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>