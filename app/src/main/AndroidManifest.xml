<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <application
        android:name=".FlashcardApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/flashcat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/flashcat"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ultimate_Flashcard_App"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Ultimate_Flashcard_App.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:label="Open flashcards">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <!-- Support content and file URI schemes -->
                <data android:scheme="file" />
                <data android:scheme="content" />

                <!-- MIME type for plain text files -->
                <data android:mimeType="text/plain" />

                <!-- Match .txt files -->
                <data android:pathPattern=".*\\.txt" />
            </intent-filter>
        </activity>
    </application>
</manifest>